{
    "parser" : "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "codeFrame": true
    },
    "extends": ["plugin:meteor/recommended", "airbnb-base", "prettier"],
    "plugins": [
        "import", "meteor", "chai-friendly", "prettier"
    ],
    "settings" : {
        "import/resolver" : "meteor"
    },
    "rules": {
        "prettier/prettier": ["error"],
        "curly" : "error",
        "linebreak-style" : "off",
        "meteor/no-session" : "off",
        "meteor/eventmap-params": "off",
        "no-tabs": "off",
        "import/no-absolute-path" : "off",
        "import/prefer-default-export": "off",
        "import/no-extraneous-dependencies" : "off",
        "import/extensions" : "off",
        "import/no-unresolved" : "error",
        "func-names": "off",
        "no-undef":"error",
        "object-shorthand":"warn",
        "prefer-arrow-callback": "off",
        "consistent-return": "off",
        "padded-blocks": "off",
        "semi": "off",
        "meteor/template-names": "off",
        "no-underscore-dangle": "off",
        "no-plusplus": "off",
        "eqeqeq": "warn",
        "quotes": "warn",
        "radix": "off",
        "no-unused-vars": "error",
        "no-param-reassign": "error",
        "guard-for-in": "off",
        "no-restricted-syntax": "off",
        "arrow-parens": "off",
        "no-unused-expressions": "off",
        "chai-friendly/no-unused-expressions": "error",
        "no-console" : "warn",
        "no-eval" : "warn",
        "no-useless-escape" : "off",
        "no-continue" : "off",
        "meteor/audit-argument-checks" : "off",
        "no-extend-native" : "off",
        "global-require" : "off",
        "no-bitwise" : "error",
        "no-restricted-properties" : "off",
        "spaced-comment" : "off",
        "no-unreachable" : "error",
        "no-trailing-spaces" : "warn",
        "no-await-in-loop": "error",
        "max-len": ["warn", { "code": 100, "ignorePattern": "^import"  }],
        "max-depth": ["warn", 3],
        "max-lines": ["warn", 200],
        "max-nested-callbacks": ["warn", 3],
        "max-params": ["warn", 4],
        "class-methods-use-this": "off",
        "new-cap": "warn",
        "no-use-before-define": "off"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "meteor": true,
        "mongo": true,
        "mocha": true
    },
    "globals" : {
		"GetFeed": true,
		"AppRootURL": true,
		"Schemas": true,
		"SEO": true,
		"SVGs": true,
        "log" : true,
        "moment" : false,
		"DocumentTouch": true,
        "ActiveRoute" : false,
        "AutoForm" : false,
        "SyncedCron" : false,
        "Mailgun" : true,
        "Handlebars" : false,
        "PI" : true,
		"RouteController" : false,
        "NonEmptyString" : true,
        "Intercom" : true,
        "ga" : true
    },
    "root" : true
}

